<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <h1>User_info</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, id:"inputName", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, id:"inputIame", class:"" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, placaholder: "ファイルを選択", accept: "image/*", id:"inputIntroduction", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary hover" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
