<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <%= link_to(edit_user_path(@user), class:"btn btn-outline-secondary btn-block") do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <%= render 'books/info-new', book_post: @book_post %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td><%= image_tag @book.get_image %><br>
                  <%= link_to @book.user.name, user_path(@user) %>
              </td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <% if @user == current_user.id %>
                <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success btn-sm hover"%></td>
              <% end %>
              <% if @user == current_user.id %>
                <td><%= link_to 'Destroy', @book, method: :delete , data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger btn-sm hover" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>